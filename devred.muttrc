color status black blue

unmy_hdr * # remove all extra headers first.
my_hdr From: Hugo Roy-Devred <hugo@devred.fm>


set from = "hugo@hugoroy.eu"
set sendmail = "/usr/bin/msmtp -a ampoliros"
set mbox = "+devred/Archives"
set record = "+devred/Sent"
set postponed = "+devred/Drafts"
set signature = "~/.mutt/perso.signature" # my signature file
set editor="vim -c 'set filetype=mkd' -c 'set spl=fr spell'"
set locale=fr_FR.UTF-8

save-hook . =devred/Archives.2014

macro index za   "<shell-escape>/usr/bin/offlineimap -a devred -q -o<enter>" "sync IMAP" # quick-sync ~/Mail immediately with offlineimap
